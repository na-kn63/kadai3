<div class="container">
  <div class="row">
    <%= flash[:notice] %>
    <div class="col-md-3">
      <!-- ここから -->
      <!-- ユーザーの投稿一覧 -->
    <%= render 'books/user-info', user: @user ,book: @book %>
</div>
<!-- ここまで切り取り -->

  <div class ="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>

      <% @books.each do |book| %>
      <tr>
        <td><%=book.title %></td>
        <td><%= book.body %></td>
         <td><%= link_to "Show",book_path(book.id) %></td>

      </tr>
      <% end %>

      </tbody>
      </table>
    </div>
  </div>
</div>